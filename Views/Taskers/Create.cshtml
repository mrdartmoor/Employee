@model Pracownicy.Models.Tasker

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj zadanie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*<div class='input-group date' id='datetimepicker1'>
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </span>
                </div>*@
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" value="@ViewBag.TaskNow" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDone" /> @Html.DisplayNameFor(model => model.IsDone)
                </label>
            </div>
            <a asp-action="Index"><buttom class="btn btn-dark"> Cofnij </buttom></a>
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </form>
    </div>
</div>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial")
                  ;}
    }
